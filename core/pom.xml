	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<artifactId>parent</artifactId>
		<groupId>com.nateyolles.sling.publick</groupId>
		<version>1.0.0-SNAPSHOT</version>
	</parent>
	<groupId>com.nateyolles.sling.publick</groupId>
	<artifactId>core</artifactId>
	<packaging>bundle</packaging>
	<version>1.0.0-SNAPSHOT</version>
	<name>Publick Core</name>
	<description>com.nateyolles.sling.publick - core</description>
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-scr-plugin</artifactId>
				<version>1.16.0</version>
				<executions>
					<execution>
						<id>generate-scr-descriptor</id>
						<goals>
							<goal>scr</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<extensions>true</extensions>
				<version>2.4.0</version>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.1</version>
				<configuration>
					<source>7</source>
					<target>7</target>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.sling</groupId>
				<artifactId>maven-sling-plugin</artifactId>
				<version>2.1.0</version>
				<configuration>
					<slingUrl>http://${sling.host}:${sling.port}/system/console</slingUrl>
					<user>${sling.username}</user>
					<password>${sling.password}</password>
				</configuration>
			</plugin>
		</plugins>
	</build>

	<profiles>
		<profile>
			<id>autoInstallBundle</id>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.sling</groupId>
						<artifactId>maven-sling-plugin</artifactId>
						<executions>
							<execution>
								<id>install-bundle</id>
								<goals>
									<goal>install</goal>
								</goals>
							</execution>
						</executions>
					</plugin>
					<plugin>
						<groupId>org.apache.felix</groupId>
						<artifactId>maven-bundle-plugin</artifactId>
						<extensions>true</extensions>
						<version>2.0.1</version>
						<configuration>
							<instructions>
								<Bundle-Activator>com.nateyolles.sling.publick.Activator</Bundle-Activator>
								<Sling-Model-Packages>
									co.essomenic.cms.api.models,
									co.essomenic.cms.components.models
								</Sling-Model-Packages>
							</instructions>
						</configuration>
					</plugin>
				</plugins>
			</build>
		</profile>
		<profile>
			<id>autoInstallDependencies</id>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-dependency-plugin</artifactId>
						<executions>
							<execution>
								<id>copy-sightly</id>
								<goals>
									<goal>copy-dependencies</goal>
								</goals>
								<configuration>
									<artifactItems>
										<includeArtifactIds>org.apache.sling.i18n,mail,org.apache.sling.jcr.compiler,org.apache.sling.xss,org.apache.sling.scripting.sightly</includeArtifactIds>
									</artifactItems>
								</configuration>
							</execution>
						</executions>
					</plugin>
					<plugin>
						<groupId>org.apache.sling</groupId>
						<artifactId>maven-sling-plugin</artifactId>
						<executions>
							<execution>
								<id>install-i18n</id>
								<goals>
									<goal>install-file</goal>
								</goals>
								<phase>install</phase>
								<configuration>
									<bundleFileName>${project.build.directory}/dependency/org.apache.sling.i18n-2.4.2.jar</bundleFileName>
								</configuration>
							</execution>
							<execution>
								<id>install-mail</id>
								<goals>
									<goal>install-file</goal>
								</goals>
								<phase>install</phase>
								<configuration>
									<bundleFileName>${project.build.directory}/dependency/mail-1.5.0-b01.jar</bundleFileName>
								</configuration>
							</execution>
							<execution>
								<id>install-jcr-compiler</id>
								<goals>
									<goal>install-file</goal>
								</goals>
								<phase>install</phase>
								<configuration>
									<bundleFileName>${project.build.directory}/dependency/org.apache.sling.jcr.compiler-2.1.0.jar</bundleFileName>
								</configuration>
							</execution>
							<execution>
								<id>install-xss</id>
								<goals>
									<goal>install-file</goal>
								</goals>
								<phase>install</phase>
								<configuration>
									<bundleFileName>${project.build.directory}/dependency/org.apache.sling.xss-1.0.2.jar</bundleFileName>
								</configuration>
							</execution>
							<execution>
								<id>install-sightly</id>
								<goals>
									<goal>install-file</goal>
								</goals>
								<phase>install</phase>
								<configuration>
									<bundleFileName>${project.build.directory}/dependency/org.apache.sling.scripting.sightly-1.0.2.jar</bundleFileName>
								</configuration>
							</execution>
							<execution>
								<id>install-cocoon</id>
								<goals>
									<goal>install-file</goal>
								</goals>
								<phase>install</phase>
								<configuration>
									<bundleFileName>${project.build.directory}/dependency/cocoon-serializers-charsets-1.0.2.jar</bundleFileName>
								</configuration>
							</execution>
							<execution>
								<id>install-commons-html</id>
								<goals>
									<goal>install-file</goal>
								</goals>
								<phase>install</phase>
								<configuration>
									<bundleFileName>${project.build.directory}/dependency/org.apache.sling.commons.html-1.0.0.jar</bundleFileName>
								</configuration>
							</execution>
							<execution>
								<id>install-rewriter</id>
								<goals>
									<goal>install-file</goal>
								</goals>
								<phase>install</phase>
								<configuration>
									<bundleFileName>${project.build.directory}/dependency/org.apache.sling.rewriter-1.0.4.jar</bundleFileName>
								</configuration>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>

